<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
	
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	    <Button
            android:id="@+id/section_prev"
            android:layout_width="30dp"
	    	android:layout_height="30dp"
	    	android:background="@drawable/day_prev_button"
			>
	    </Button>
	    <!-- RelativeLayout 은 상호간에 관계를 지정해야 겹쳐보이지 않는다. -->
	    <TextView
	        android:id="@+id/section_date"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight="1" />
	    <Button
            android:id="@+id/section_next"
            android:layout_width="30dp"
	    	android:layout_height="30dp"
	    	android:background="@drawable/day_next_button"
			>
	    </Button>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	    
	    <ListView
	        android:id="@+id/mList"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content" >
	    </ListView>
	</LinearLayout>
	
</LinearLayout>
